<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:accessibilityLiveRegion="none"
    android:background="@color/colorfon"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:src="@mipmap/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="@dimen/spacing_ultra"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="@string/name"
        android:textColor="@color/colorName"
        android:textSize="@dimen/text_size_macro"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView" />

    <TextView
        android:id="@+id/resume"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_ultra"
        android:layout_marginTop="@dimen/spacing_default"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_info"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/resume"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/colorBlue"
        android:onClick="onClick"
        android:text="@string/info"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_ultra"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/resume" />

    <Button
        android:id="@+id/btn_skills"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_info"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/colorBlue"
        android:onClick="onClick"
        android:text="@string/skills"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_ultra"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/btn_info" />

    <Button
        android:id="@+id/btn_contacts"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_skills"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/colorBlue"
        android:onClick="onClick"
        android:text="@string/contacts"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_ultra"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/btn_skills" />


</androidx.constraintlayout.widget.ConstraintLayout>